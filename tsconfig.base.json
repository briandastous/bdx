{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "useUnknownInCatchVariables": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@bdx/config": ["packages/config/src/index.ts"],
      "@bdx/db": ["packages/db/src/index.ts"],
      "@bdx/engine": ["packages/engine/src/index.ts"],
      "@bdx/ingest": ["packages/ingest/src/index.ts"],
      "@bdx/observability": ["packages/observability/src/index.ts"],
      "@bdx/twitterapi-io": ["packages/twitterapi-io/src/index.ts"],
      "@bdx/twitterapi-io-types": ["packages/twitterapi-io-types/src/index.ts"]
    }
  }
}
