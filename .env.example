# Secrets (required)
DATABASE_URL=postgres://bdx:bdx@localhost:5433/bdx
DB_PORT=5433
WEBHOOK_TOKEN=change-me
TWITTERAPI_IO_TOKEN=change-me

# Deployment environment (selects `config/env/<DEPLOY_ENV>.yaml`)
DEPLOY_ENV=development

# Optional overrides (non-secret; prefer `config/*.yaml`)
# DB_PORT is used by docker compose (via `pnpm db:up`) to choose the host port for Postgres.
# DB_PORT=5432
# LOG_LEVEL=info
# HOST=0.0.0.0
# PORT=3000
# ENGINE_TICK_INTERVAL_MS=60000
# RUN_MIGRATIONS=true
# ENGINE_SINGLE_TICK=false
# WORKER_HEALTH_PORT=3002
# DB_MAX_CONNECTIONS=10
# DB_IDLE_TIMEOUT_MS=60000
# DB_CONNECT_TIMEOUT_MS=10000
# DB_MAX_LIFETIME_MS=3600000
# DB_STATEMENT_TIMEOUT_MS=30000
# TWITTERAPI_IO_BASE_URL=https://api.twitterapi.io
# TWITTERAPI_IO_RATE_LIMIT_QPS=1
# TWITTERAPI_IO_MAX_QUERY_LENGTH=512
# RETENTION_ENABLED=true
# RETENTION_PERIOD_MS=86400000
# RETENTION_PLANNER_EVENTS_DAYS=30
# RETENTION_INGEST_EVENTS_DAYS=90
# RETENTION_WEBHOOK_EVENTS_DAYS=180
# RETENTION_HTTP_BODY_MAX_BYTES=2048
