{
  "name": "bdx",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.26.1",
  "engines": {
    "node": ">=24 <25"
  },
  "scripts": {
    "build": "tsc -b",
    "dev": "pnpm -r --parallel --filter @bdx/api --filter @bdx/worker dev",
    "db:codegen": "kysely-codegen",
    "db:codegen:verify": "kysely-codegen --verify",
    "db:up": "bash scripts/db_up.sh",
    "db:migrate": "pnpm --filter @bdx/cli build && node packages/cli/dist/bin.js db:migrate",
    "generate:twitterapi-types": "scripts/generate_twitterapi_io_types.sh",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier -w .",
    "prepare": "husky",
    "typecheck": "tsc -b --pretty false",
    "test": "vitest run"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@testcontainers/postgresql": "^10.18.0",
    "@types/node": "^24.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.0.1",
    "expect-type": "^1.3.0",
    "husky": "^9.1.7",
    "kysely-codegen": "^0.19.0",
    "lint-staged": "^15.2.5",
    "prettier": "^3.4.2",
    "tsx": "^4.20.5",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.23.0",
    "vitest": "^2.1.8"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,mdx,yaml,yml}": [
      "prettier -w"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
