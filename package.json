{
  "name": "bdx",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.26.1",
  "engines": {
    "node": ">=24 <25"
  },
  "scripts": {
    "build": "tsc -b",
    "dev": "pnpm -r --parallel --filter @bdx/api --filter @bdx/worker dev",
    "db:migrate": "pnpm --filter @bdx/cli build && node packages/cli/dist/bin.js db:migrate",
    "lint": "eslint .",
    "format": "prettier -w .",
    "typecheck": "tsc -b --pretty false",
    "test": "vitest run"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["esbuild"]
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^24.0.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.4.2",
    "tsx": "^4.20.5",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.23.0",
    "vitest": "^2.1.8"
  }
}
